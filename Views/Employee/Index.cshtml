@model IEnumerable<etiyaproject.Models.EMPLOYEE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h1 style="text-align:center">Employees</h1>



<button class="btn btn-default btn-sm"> @Html.ActionLink("Create New", "Create")</button>
<br/><br />
<table class="table table-bordered table-hover table-condensed">
    <tr>
        <th style="text-align:center">
           <p>NAME</p>
        </th>
        <th style="text-align:center">
            <p>STATU</p>
        </th>
        <th style="text-align:center">
            <p>CREATE DATE</p>
        </th>
        <th style="text-align:center">
            <p>TP</p>
        </th>
    </tr>

@foreach (var item in Model) {
<tr style="text-align: center; text-transform: capitalize;">
    <td>
        @Html.DisplayFor(modelItem => item.NAME_SURNAME)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.STATU)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CDATE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TP)
    </td>
    <td >
        <button class="btn btn-default btn-sm">@Html.ActionLink("Edit", "Edit", new { id = item.EMPLOYEE_ID })</button>
        <button class="btn btn-default btn-sm">@Html.ActionLink("Details", "Details", new { id = item.EMPLOYEE_ID })</button>
        <button class="btn btn-default btn-sm">@Html.ActionLink("Delete", "Delete", new { id = item.EMPLOYEE_ID })</button>

    </td>
</tr>
}

</table>

@model IEnumerable<etiyaproject.Models.PROJECT_DATE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 style="text-align:center">Project Details</h1>

<br/>
@using (Html.BeginForm("Index", "PROJECT_DATE", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input class="btn btn-default btn-sm" type="submit" value="Search" />
    <button class="btn btn-default btn-sm">@Html.ActionLink("Show All", "Index")</button>
    <button class="btn btn-default btn-sm"> @Html.ActionLink("Create New", "Create")</button>
    <br />
    <br />
}
<table class="table table-bordered table-hover table-condensed">
    <tr >
        <th style="text-align:center">
           <p>PROJECT NAME</p>
        </th>
        <th style="text-align:center">
           <p>MILESTONES</p>
        </th>
        <th style="text-align:center">
            <p>START DATE</p>
        </th>
        <th style="text-align:center">
            <p>END DATE</p>
        </th>
        <th style="text-align:center">
            <p>PERCENT</p>
        </th>
        <th style="text-align:center">
            <p>LAST STATUS</p>
        </th>
        <th style="text-align:center">
            <p>MILESTONES STATUS</p>
        </th>
        <th style="text-align:center">
            <p>TEAM DEVOPS</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align: center; text-transform: capitalize; ">
            <td style="background-color:@item.PROJECT.COLOR">
                @Html.DisplayFor(modelItem => item.PROJECT.PROJECT_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MILESTONES_TYPE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.S_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LAST_ST)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GENERAL_ST.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PROJECT.TEAM_DEVOPS)
            </td>
            <td style="width:180px;">
                <button class="btn btn-default btn-sm">@Html.ActionLink("Edit", "Edit", new { id = item.PROJECT_DATE_ID })</button>
                <button class="btn btn-default btn-sm">@Html.ActionLink("Details", "Details", new { id = item.PROJECT_DATE_ID })</button>
                <button class="btn btn-default btn-sm">@Html.ActionLink("Delete", "Delete", new { id = item.PROJECT_DATE_ID })</button>
            </td>
        </tr>
    }

</table>

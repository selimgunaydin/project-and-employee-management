@model IEnumerable<etiyaproject.Models.PROJECT>
@using etiyaproject.Models

@{
    ViewBag.Title = "Atlas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 style="text-align:center">Atlas Project</h1>
<blockquote>
    <p>NOT:Proje silmeden önce project details sayfasından projeye ait analiz tasarım geliştirme gibi kayıtları siliniz.</p>
</blockquote>
@using (Html.BeginForm("Atlas", "Project", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input class="btn btn-default btn-sm" type="submit" value="Search" />
    <button class="btn btn-default btn-sm">@Html.ActionLink("Show All", "Atlas")</button>
    <button class="btn btn-default btn-sm"> @Html.ActionLink("Create New", "Create")</button>
    <br />
    <br />
}



<table class="table table-bordered table-hover table-condensed">
    <tr style="text-align:center">
        <th style="text-align:center">
            <p>TEAM DEVOPS</p>
        </th>
        <th style="text-align:center">
            <p>PROJECT NUMBER</p>
        </th>
        <th style="text-align:center">
            <p>PROJECT NAME</p>
        </th>
        <th style="text-align:center">
            <p>PROJECT STATUS</p>
        </th>
        <th style="text-align:center">
            <p>MILESTONES</p>
        </th>
        <th style="text-align:center">
            <p>PROJECT COLOR</p>
        </th>
        <th style="text-align:center">
            <p>TEAM NAME</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align: center; text-transform: capitalize;">
            <td>
                @Html.DisplayFor(modelItem => item.TEAM_DEVOPS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PROJECT_NUMBER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PROJECT_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PROJECT_ST)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MILESTONES)
            </td>
            <td  style="text-transform: capitalize;">
                @Html.DisplayFor(modelItem => item.COLOR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GNL_CHAR_VAL.TEAM_NAME)
            </td>
            <td style="width:175px">
                <button class="btn btn-default btn-sm">@Html.ActionLink("Edit", "Edit", new { id = item.PROJECT_ID })</button>
                <button class="btn btn-default btn-sm"><a href="javascript:void(0);" class="anchorDetail" data-id="@item.PROJECT_ID">Show</a></button>
            </td>
        </tr>
    }

</table>
<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>




@section scripts

{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <script>
        var TeamDetailPostBackURL = '/Project/Detaylar';
        $(function () {
            $(".anchorDetail").click(function () {

                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {

                        $('#myModalContent').html(data);
                        $('#myModal').modal(options);
                        $('#myModal').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });
            //$("#closebtn").on('click',function(){
            //    $('#myModal').modal('hide');

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });

    </script>

}
